{
  "name": "node-api",
  "version": "1.0.0",
  "description": "Nodejs api starter",
  "main": "index.js",
  "scripts": {
    "start": "pm2 start dist/bin/www.js --name node-api",
    "serve:docker": "docker-compose -f docker-compose.dev.yml up",
    "dev": "nps dev.start",
    "dev:debug": "nps dev.debug",
    "dev:inspect": "nps dev.inspect",
    "build": "nps build",
    "db": "mongod --dbpath ./tmp/data",
    "deploy:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "deploy:prod": "docker-compose up --build",
    "deploy": "docker stack deploy -c docker-compose.yml",
    "doc": "nps doc"
  },
  "author": "Rakshan Shetty",
  "license": "MIT",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "chalk": "^2.3.2",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-mongo-sanitize": "^1.3.2",
    "express-validation": "^1.0.2",
    "express-winston": "^2.5.1",
    "helmet": "^3.12.0",
    "http-status": "^1.0.1",
    "joi": "^13.1.2",
    "jsonwebtoken": "^8.2.1",
    "method-override": "^2.3.10",
    "mongoose": "^5.0.14",
    "mongoose-unique-validator": "^2.0.0",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pretty-error": "^2.1.1",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "nodemon": "^1.17.3",
    "nps": "^5.9.0",
    "nps-utils": "^1.5.0"
  }
}
